<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="86dp"
                android:layout_height="86dp"
                tool:src="@drawable/aaeaaqaaaaaaaazbaaaajde5odhjytbmltc2mdatndi5yi05mzflltmxymq3ndvjzdqxmq"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"
                />

            <ImageView
                android:layout_marginTop="8dp"
                android:layout_marginStart="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/placeholder_name"
                android:layout_toEndOf="@id/profile_image"
                android:src="@drawable/ic_account_circle_blue_300_24dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/placeholder_name"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="4dp"
                android:fontFamily="sans-serif-black"
                android:id="@+id/tv_name"
                tool:text="Adrian Septiandry"/>

            <ImageView
                android:layout_below="@id/placeholder_name"
                android:layout_marginTop="2dp"
                android:layout_marginStart="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/placeholder_university"
                android:layout_toEndOf="@id/profile_image"
                android:src="@drawable/ic_school_blue_300_24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/placeholder_university"
                android:layout_below="@id/tv_name"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="4dp"
                android:fontFamily="sans-serif-black"
                android:id="@+id/tv_university"
                tool:text="University Of Indonesia"/>

            <ImageView
                android:layout_marginStart="4dp"
                android:layout_marginTop="2dp"
                android:layout_below="@id/placeholder_university"
                android:id="@+id/placeholder_description"
                android:layout_toEndOf="@id/profile_image"
                android:src="@drawable/ic_layers_blue_300_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:layout_toEndOf="@id/placeholder_description"
                android:layout_below="@id/tv_university"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="2dp"
                android:id="@+id/tv_description"
                tool:text="I'm an cs student who love to solve problem by making a good software"/>

        </RelativeLayout>


    </android.support.v7.widget.CardView>




</RelativeLayout>